{
  "name": "token-manager",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "migrate": "node-pg-migrate -m './src/infrastructure/storage/migrations' --config './node-pg-migrate.js'",
    "prebuild": "rimraf dist",
    "build": "tsc",
    "start": "node dist/main.js",
    "start:dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/api/main.ts",
    "lint": "eslint 'src/**/*.ts' --fix",
    "format": "prettier --write 'src/**/*.ts'",
    "test": "jest"
  },
  "dependencies": {
    "config": "^3.3.11",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "inversify": "^6.0.0",
    "joi": "^17.13.1",
    "pg": "^8.11.5",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.9",
    "@types/jest": "^26.0.24",
    "@types/node": "^14.14.11",
    "@types/pg": "^8.11.6",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-import": "^2.22.1",
    "jest": "^26.6.3",
    "node-pg-migrate": "^7.3.2",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "supertest": "^6.0.1",
    "ts-jest": "^26.5.6",
    "ts-mockito": "^2.6.1",
    "ts-node": "^10.9.2",
    "typescript": "^4.1.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
