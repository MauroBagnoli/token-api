{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2017",
        "types": ["jest"],
        "esModuleInterop": true,
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": ".",
        "incremental": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "paths": {
            "@tokens": ["src/core/tokens/index.ts"]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": ["node_modules", "dist"]
}
